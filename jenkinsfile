environment {
  GITHUB_TOKEN = credentials(lartiorkor-gh-creds)
}

pipeline {
  agent any
  tools {nodejs "node22"}

  stages {
    stage('Release') {
        when {
          branch 'main';
        }
        steps {
          // withCredentials([file(credentialsId: 'amap-usr-mgt-env', variable: 'mySecretEnvFile')]) {
          withEnv([environment.GITHUB_TOKEN]) {
            sh 'npm i'
            sh 'git branch --show-current'
            sh 'npm run release --ci'
          }
        }
    }
  }
}
