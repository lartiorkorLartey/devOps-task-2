  agent any
  tools {nodejs "node22"}

  stages {
    stage('init'){
      steps{
        sh 'npm i'
      }
    }

    stage('Release') {
        when {
          branch 'main';
        }
        steps {
          // withCredentials([file(credentialsId: 'amap-usr-mgt-env', variable: 'mySecretEnvFile')]) {
          // withEnv([environment.GITHUB_TOKEN]) {
            sh 'git config user.email tiorkordotdev@gmail.com'
            sh 'git config user.name lartiorkorLartey'
            sh 'npm run release --ci'
          // }
        }
    }
  }
}
