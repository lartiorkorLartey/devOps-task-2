{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore: release v${version}"
  },
  "hooks":{
    "before:init": ["git pull"],
    "after:bump": "npx auto-changelog -p"
  },
  "github":{
    "release": true,
    "preRelease":false,
    "tokenRef":"GITHUB_TOKEN",
    "web": false,
    "skipChecks":true,
    "autoGenerate":true
  },
  "npm":{
    "publish": false
  }
}
